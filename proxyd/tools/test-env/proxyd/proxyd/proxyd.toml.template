[server]
enable_request_log = true
log_level = "debug"
rpc_host = "0.0.0.0"
rpc_port = 8080

[metrics]
enabled = false
host = "0.0.0.0"
port = 7300



[backend]
max_degraded_latency_threshold = "30ms"
max_retries = 0
out_of_service_seconds = 0
response_timeout_seconds = 5


[backends.proxyd-upstream]
rpc_url = "http://proxyd-upstream:8081"
consensus_skip_peer_count = true

[backends.proxyd-upstream2]
consensus_skip_peer_count = true
rpc_url = "http://proxyd-upstream-2:8082"

[backend_groups]
[backend_groups.replica]
backends = ["proxyd-upstream", "proxyd-upstream2"]
consensus_aware = true
consensus_ha = false
consensus_poller_interval = "3s"

